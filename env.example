# Environment Variables for LeadGen Onboarding App
# Copy this file to .env.local and update with your actual values

# Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=https://lead-gen-service.robotice.io

# API Key - TEMPORARY: exposed to client for debugging
# ⚠️ WARNING: This exposes the API key to the browser. Use only for testing!
# TODO: Move back to server-side proxy after debugging is complete
NEXT_PUBLIC_API_KEY=lk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# App Configuration
NEXT_PUBLIC_APP_BASE_URL=http://localhost:3000

# Mercado Pago (Payments)
# Public key for client-side initialization of Wallet/Bricks
NEXT_PUBLIC_MP_PUBLIC_KEY=APP_USR-xxxxxxxxxxxxxxxxxxxx
# Secret access token for server-side SDK (do NOT expose to client)
MP_ACCESS_TOKEN=APP_USR-xxxxxxxxxxxxxxxxxxxx
# Optional: Integrator ID provided by Mercado Pago
MP_INTEGRATOR_ID=

# OAuth Configuration (if needed)
STATE_SIGNING_KEY=your-state-signing-key-here

# Development/Production flags
NODE_ENV=development
